



<div class="container">
    <div class="row">
        <div class="col-xs-5"><h3>Login</h3></div>

        <div class="col-xs-5"><md-content layout-padding class="autoScroll">
            <md-input-container class="md-icon-float" >
                <!-- Use floating label instead of placeholder -->
                <label>Login</label>
                <md-icon  class="name"></md-icon>
                <input ng-model="user.login" type="text">
            </md-input-container>
            <md-input-container class="md-icon-float" >
                <!-- Use floating label instead of placeholder -->
                <label>Password</label>
                <md-icon  class="name"></md-icon>
                <input ng-model="user.password" type="password">

            </md-input-container>
            <md-input-container class="md-icon-float" >
                <md-button class="md-raised" ng-click="login()">Login</md-button>
            </md-input-container>
        </md-content></div>
    </div>
</div>
